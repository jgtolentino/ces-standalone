# TBWA Chat Tenant Environment Variables
# Copy this file to .env.local and fill in your values

# Tenant Configuration
TENANT_ID=tbwa-chat
TENANT_NAME="TBWA AI Assistant"

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AI/LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Pulser Orchestration
PULSER_API_URL=http://localhost:3001
PULSER_API_KEY=your_pulser_api_key_here

# CES Integration
CES_API_URL=https://api.ces.example.com
CES_API_KEY=your_ces_api_key_here

# Scout Integration  
SCOUT_API_URL=https://api.scout.example.com
SCOUT_API_KEY=your_scout_api_key_here

# TBWA Brand Configuration
BRAND_PRIMARY_COLOR=#00B5AD
BRAND_SECONDARY_COLOR=#333333

# NextJS Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Optional: Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Optional: Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development