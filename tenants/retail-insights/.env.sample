# Retail Insights Tenant Environment Variables
# Copy this file to .env.local and fill in your values

# Tenant Configuration
TENANT_ID=retail-insights
TENANT_NAME="Philippines Retail Insights Dashboard"

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AI Configuration
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here

# Azure Key Vault (for production)
AZURE_KEY_VAULT_URL=your_azure_key_vault_url_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# Databricks Integration
DATABRICKS_HOST=your_databricks_host_here
DATABRICKS_TOKEN=your_databricks_token_here
DATABRICKS_WAREHOUSE_ID=your_databricks_warehouse_id_here

# IoT Device Management
IOT_DEVICE_REGISTRY_URL=your_iot_registry_url_here
IOT_DEVICE_REGISTRY_KEY=your_iot_registry_key_here

# Map Services
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# NextJS Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret_here

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Vercel Deployment
VERCEL_URL=your_vercel_url_here
VERCEL_ENV=preview

# Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
NEXT_PUBLIC_ENABLE_IOT_DEVICES=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true