# AI Agency Monorepo - Environment Configuration
# Copy to .env.local and fill in your values

# ==========================================
# AZURE OPENAI (All Tenants)
# ==========================================
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo

# ==========================================
# CES Tenant - Azure PostgreSQL
# ==========================================
CES_AZURE_PG_HOST=ces-postgres.postgres.database.azure.com
CES_AZURE_PG_DB=campaign_effectiveness
CES_AZURE_PG_USER=ces_admin@ces-postgres
CES_AZURE_PG_PASS=your_secure_password

# ==========================================
# Retail Insights Tenant - Supabase
# ==========================================
RETAIL_SUPABASE_URL=https://your-project.supabase.co
RETAIL_SUPABASE_KEY=your_supabase_anon_key

# ==========================================
# Scout Tenant - Supabase
# ==========================================
SCOUT_SUPABASE_URL=https://scout-project.supabase.co
SCOUT_SUPABASE_KEY=your_scout_supabase_key

# ==========================================
# TBWA Chat Tenant - Supabase
# ==========================================
TBWA_SUPABASE_URL=https://tbwa-project.supabase.co
TBWA_SUPABASE_KEY=your_tbwa_supabase_key

# ==========================================
# Development Settings
# ==========================================
NODE_ENV=development
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000