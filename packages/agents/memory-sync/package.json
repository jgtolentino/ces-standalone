    "cleanup": "node dist/cleanup.js"
  },
  "dependencies": {
    "@ai/db": "workspace:*",
    "@ai/agents": "workspace:*",
    "zod": "^3.22.0",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^20.16.11",
    "@types/uuid": "^9.0.7",
    "@types/node-cron": "^3.0.8",
    "tsup": "^8.0.0",
    "eslint": "catalog:"
  }
}