{
  "name": "@ai/memory-sync",
  "version": "0.1.0",
  "description": "Persistent memory system for AI agents with cross-agent communication",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
